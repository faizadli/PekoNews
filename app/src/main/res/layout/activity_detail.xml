<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_detail_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="330dp"
            android:layout_height="220dp"
            android:src="@drawable/ic_img_content" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_trending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="@string/txt_trending_games"
        android:textSize="12dp"
        android:textColor="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/image_detail_cv"/>

    <TextView
        android:id="@+id/txt_desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="@string/descrip_title"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_trending"/>

    <TextView
        android:id="@+id/paragraf1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:text="@string/paragraf1"
        app:layout_constraintTop_toBottomOf="@id/txt_desc_title"/>

    <TextView
        android:id="@+id/paragraf2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:text="@string/paragraf2"
        app:layout_constraintTop_toBottomOf="@id/paragraf1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:text="@string/paragraf3"
        app:layout_constraintTop_toBottomOf="@id/paragraf2"/>

</androidx.constraintlayout.widget.ConstraintLayout>